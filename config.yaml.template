# Research Assistant Configuration Template
# Copy this file to config.yaml and fill in your API keys

# Anthropic Claude API Configuration
anthropic:
  api_key: ${ANTHROPIC_API_KEY}  # Or set directly: "sk-ant-..."
  model: "claude-sonnet-4-5-20250929"
  max_tokens: 4000
  temperature: 0.3  # Lower = more focused/deterministic

# Search Engine Settings
search:
  # Provider: "auto" (try DuckDuckGo, fallback to Google) | "duckduckgo" | "google"
  provider: "auto"
  engine: "duckduckgo"  # Legacy field, kept for compatibility
  max_results_per_query: 5
  timeout_seconds: 10
  user_agent: "ResearchAssistant/1.0"

  # Google Custom Search API (optional, for fallback when DuckDuckGo fails)
  # Free tier: 100 queries/day
  # Setup: https://developers.google.com/custom-search/v1/overview
  google_api_key: ${GOOGLE_API_KEY}  # Or set directly: "your-api-key"
  google_cse_id: ${GOOGLE_CSE_ID}    # Custom Search Engine ID

# Content Fetching Settings
fetching:
  max_content_length: 5000  # Maximum words per source
  timeout_seconds: 10
  retry_attempts: 2

# Agent Behavior Parameters
agent:
  max_subqueries: 5  # Maximum sub-queries to generate
  min_subqueries: 3  # Minimum sub-queries to generate
  facts_per_source: 5  # Target facts to extract per source

# Output Settings
output:
  report_dir: "data/reports"
  include_timestamps: true
  save_intermediate: false  # Save intermediate results for debugging

# Logging Configuration
logging:
  level: "INFO"  # DEBUG, INFO, WARNING, ERROR
  file: "logs/research.log"
  console: true
